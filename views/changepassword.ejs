<%- include('partials/header'); -%>
<form  method="POST">
    <h1>पासवर्ड बादलवा</h1>
    <div>
        <label for="password">नवीन पासवर्ड</label>
        <input type="password" id="password" name="password" placeholder="नवीन पासवर्ड" required>
        <div class="error email" id="passwordError"></div>
    </div>
    <div>
        <label for="confirmpassword" >पासवर्डची पुष्टी करा</label>
        <input type="password" id="confirmpassword" name="confirmpassword" placeholder="पासवर्डची पुष्टी करा" required>
        <div class="error email" id="confirmPasswordError"></div>
    </div>

    <button id="submit-btn" type="submit" class="btn" disabled>पासवर्ड बादलवा</button>
</form>

<script src="/js/changePassword.js"></script>

<%- include('partials/footer'); -%>